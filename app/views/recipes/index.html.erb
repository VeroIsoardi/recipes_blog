    </div>

    <% if authenticated? %>
      <%= link_to "Nueva receta", new_recipe_path, class: "rounded-lg py-3 px-5 bg-fuchsia-800 text-white block font-medium" %>
    <% end %>
  </div>
  <div class="w-full justify-center flex">
    <div class="flex space-x-3">
      <%= form_with model: false, url: recipes_path, method: :get, data: { turbo_action: "replace", turbo_permanent: "", controller: 'filter' } do |f| %>
        <%= f.search_field :query,
          placeholder: 'Buscar por nombre o categorÃ­a',
          autocomplete: 'off',
          value: params[:query],
          data: { filter_target: 'input', action: 'filter#submit' },
          class: 'w-72 rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-2/3 py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-fuchsia-600 focus:border-transparent' %>
        <%= f.submit "Buscar", class: "flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-fuchsia-600 rounded-lg shadow-md hover:bg-fuchsia-700 focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:ring-offset-2 focus:ring-offset-purple-200" %>
      <% end %>
    </div>
  </div>

  <% if @recipes.present? %>
    <div class="grid grid-cols-1 gap-3 md:gap-6 mt-4 md:mt-16" id="recipes">
      <%= render @recipes %>
    </div>

    <% if @pagy.next.present? %>
      <%= turbo_frame_tag :next_page, src: recipes_path(page: @pagy.next, query: params[:query], format: :turbo_stream), loading: :lazy, class: 'flex justify-center' do %>
        <div class="text-center">
          <div role="status">
            <%= phosphor_icon('spinner-gap', class: 'inline w-8 h-8 text-gray-200 animate-spin fill-fuchsia-600')%>
          </div>
          <span class="sr-only">Loading...</span>
        </div>
      <% end %>
    <% end %>
  <% else %>
