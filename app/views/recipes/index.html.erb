<% content_for :title, "Recetas" %>

<section class="relative w-full">
  <div class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-30">
    <div class="blur-[106px] h-56 bg-purple-400"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300"></div>
  </div>
  <div class="max-w-7xl mx-auto px-6 md:px-16">
    <div class="relative pt-4 md:pt-16 ml-auto z-10">
      <div class="flex items-end justify-between mb-12 header">
        <div class="title">
          <%= phosphor_icon('newspaper', class: 'hidden md:block w-12 h-12 text-cyan-700')%>
          <p class="text-4xl font-bold text-gray-800">
            Curadur√≠a de recetas por <span class="text-fuchsia-700">Vero</span>
          </p>
        </div>

        <% if Current.user.present? %>
          <%= link_to "Nueva receta", new_recipe_path, class: "rounded-lg py-3 px-5 bg-fuchsia-800 text-white block font-medium" %>
        <% end %>
      </div>
      <div class="w-full justify-center flex">
        <form class="flex space-x-3 w-full md:w-1/3">
          <input type="text" class="rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-2/3 py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-fuchsia-600 focus:border-transparent" placeholder="Buscar recetas" />
          <button
            class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-fuchsia-600 rounded-lg shadow-md hover:bg-fuchsia-700 focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:ring-offset-2 focus:ring-offset-purple-200"
            type="submit">
            Buscar
          </button>
        </form>
      </div>
      <div class="grid grid-cols-1 gap-12 mt-4 md:mt-16" id="recipes">
        <% @recipes.each do |recipe| %>
          <%= render recipe %>
        <% end %>
      </div>
    </div>
</section>
