<div class="bg-fuchsia-50 w-dvw h-dvh">
  <div class="flex items-center justify-between">
    <%= link_to recipes_path, class: "flex items-center gap-1 pt-4 ml-4 text-gray-600 hover:text-gray-800 font-medium" do %>
      <%= phosphor_icon('caret-left', class:'h-4 w-4') %>
      Volver
    <% end %>

    <% if authenticated? %>
      <div class="flex gap-3 items-center mr-4">
        <%= link_to phosphor_icon('pencil-simple-line', class: 'h-6 w-6 text-gray-600'), edit_recipe_path(@recipe) %>
        <%= button_to phosphor_icon('trash', class: 'h-6 w-6 text-red-600'), @recipe, method: :delete, class: 'flex items-center' %>
      </div>
    <% end %>
  </div>

  <div class="mx-auto w-full md:w-1/2 min-h-[650px] flex bg-white z-10 rounded-lg shadow-md">
    <div class="p-8">
      <p class="font-medium text-cyan-700 text-lg flex items-center gap-1 mb-2">
        <%= phosphor_icon(category_icon(@recipe.category), class: 'h-6 w-6')%>
        <%= @recipe.category.capitalize %>
      </p>
      <h1 class="text-4xl font-bold text-gray-800 mb-4">
        <%= @recipe.title %>
      </h1>

      <h2 class="text-2xl font-medium text-gray-700">Ingredientes</h2>
      <p class="prose mb-4">
        <%= @recipe.ingredients %>
      </p>

      <h2 class="text-2xl font-medium text-gray-700">Preparaci√≥n</h2>
      <p class="prose">
        <%= @recipe.steps %>
    </div>
  </div>
</div>