<%= link_to recipe, class: "flex flex-col w-full cursor-pointer border-b border-neutral-100 justify-start", id: dom_id(recipe) do %>
  <div class="px-4 py-3 bg-white w-full rounded">
    <p class="font-medium text-cyan-700 text-md flex items-center justify-start gap-1">
      <%= phosphor_icon(category_icon(recipe.category), class: 'h-4 w-4')%>
      <%= recipe.category&.capitalize %>
    </>
    <p class="text-xl font-medium text-gray-800 flex justify-start">
      <%= recipe.title %>
    </p>
  </div>
<% end %>